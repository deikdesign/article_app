<%=   simple_form_for @article do |f|   %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
     <%=  f.file_field :article_img %>
    <%=  f.input :title, label: "Article Title"   %>
    <%=  f.input :description   %>
    <%=  f.input :author   %>
    <%=  f.button :submit   %>



<% end   %>